<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:model="clr-namespace:DrinkStock.Models"  
             xmlns:viewmodel="clr-namespace:DrinkStock.ViewModels"  
             x:DataType="viewmodel:MainPageViewModel"  
             x:Class="DrinkStock.MainPage">
    <Shell.TitleView>
        <Label Text="DrinkStock" 
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               FontSize="25"/>
    </Shell.TitleView>
    <Grid ColumnDefinitions="*,0,90,0,*"
          RowDefinitions="Auto,*"
          Padding="20"
          BackgroundColor="#aaaaaa">
        <Label  Grid.Row="0"
                Grid.Column="0"
                Text="Drink Name"
                HorizontalTextAlignment="Center"
                TextDecorations="Underline"/>
        <Label Grid.Row="0"
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Text="Count"
               HorizontalTextAlignment="Center"
               TextDecorations="Underline"/>
        <Label Grid.Row="0"
               Grid.Column="4"
               Text="Downstock Qty"
               HorizontalTextAlignment="Center"
               TextDecorations="Underline"/>
        <CollectionView ItemsSource="{Binding Drinks}"
                        Grid.Row="1"
                        Grid.ColumnSpan="5">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Drink">
                    <Grid ColumnDefinitions="*,0,90,0,*" Padding="0,10,0,0">
                        <Label Grid.Column="0"
                               Text="{Binding Name}"
                               FontSize="11"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaximumWidthRequest="60"/>
                        <Button Grid.Column="1"
                                Text="-"
                                Command="{Binding SubtractOneCommand}"
                                HeightRequest="15"
                                WidthRequest="15"/>
                        <Entry Grid.Column="2"
                               x:Name="CurrentStockEntry"
                               Text="{Binding CurrentStock}"
                               FontSize="15"
                               Keyboard="Numeric"
                               HorizontalTextAlignment="Center"
                               WidthRequest="20"/>
                        <Button Grid.Column="3"
                                Text="+"
                                Command="{Binding AddOneCommand}"
                                HeightRequest="15"
                                WidthRequest="15"/>
                        <Label Grid.Column="4"
                               Text="{Binding DownstockQuantity}"
                               FontSize="15"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
        
</ContentPage>
